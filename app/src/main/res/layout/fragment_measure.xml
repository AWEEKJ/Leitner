<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_measure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uos.leitner.MeasureView"
    tools:ignore="MissingPrefix"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/categoryNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="60dp"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout1">

            <TextView
                android:id="@+id/minutesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70dp"
                android:textColor="@color/colorText"
                app:font="Slabo"
                android:layout_weight="130" />

            <TextView android:id="@+id/minutes_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="' "
                android:textSize="70dp"
                android:textColor="@color/colorText"
                app:font="Slabo"/>

            <TextView
                android:id="@+id/secondsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70dp"
                android:textColor="@color/colorText"
                app:font="Slabo"
                android:layout_weight="250" />

            <TextView android:id="@+id/seconds_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="''"
                android:textSize="70dp"
                android:textColor="@color/colorText"
                app:font="Slabo"/>

        </LinearLayout>

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:layout_marginLeft="50dp"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:donut_progress="0"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true" />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startButton"
                android:text="start" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stopButton"
                android:text="stop" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
